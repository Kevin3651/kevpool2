<p id="notice"><%= notice %></p>
<p class="heading">Sign up</p>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <% if @resource_name.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@resource_name.errors.count, "error") %> prohibited this User from being saved:</h2>

      <ul>
      <% @resource_name.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-inputs">
    <%= f.text_field :email, :placeholder => "Email", :required => true, :autofocus => true %><span class="help-block">Email must be @grinnell.edu.</span>
    <%= f.password_field :password, :placeholder => "Password", :required => true %><br>
    <%= f.password_field :password_confirmation, :placeholder => "Password Confirmation", :required => true %><br>
  </div>

<button class="btn btn-primary">&nbsp&nbspSign Up&nbsp&nbsp</button>
  </div>
<% end %>

