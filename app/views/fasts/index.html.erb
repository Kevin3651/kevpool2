<h1>Listing fasts</h1>

<table>
  <thead>
    <tr>
      <th>Where</th>
      <th>When</th>
      <th>Price</th>
      <th>Seats</th>
      <th>Notes</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @fasts.each do |fast| %>
      <tr>
        <td><%= fast.where %></td>
        <td><%= fast.when %></td>
        <td><%= fast.price %></td>
        <td><%= fast.seats %></td>
        <td><%= fast.notes %></td>
        <td><%= link_to 'Show', fast %></td>
        <td><%= link_to 'Edit', edit_fast_path(fast) %></td>
        <td><%= link_to 'Destroy', fast, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

