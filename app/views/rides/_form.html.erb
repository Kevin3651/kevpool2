                <%= f.label :return, "Return Date" %>
    <%= f.text_field :return, :id => "myTextField4" %><br> </div>
        <div class="inputs">
      <%= f.input :return_time %>
    <%= f.input :Price %>
    <%= f.input :Seats %>
    <%= f.label :Notes %>
    <%= f.text_area :Notes %>
<span class="help-block">Hint: List Popular cities you are going through to get to your destination</span>

  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
</div>
