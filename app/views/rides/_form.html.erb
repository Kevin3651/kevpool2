      <h2><%= pluralize(@ride.errors.count, "error") %> prohibited this Ride from being saved:</h2>

      <ul>
      <% @ride.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="inputs">
<%= f.input :Starting_From, :input_html =>{:id => 'addressA'} %>
    <%= f.input :Going_to, :input_html =>{:id => 'addressB'} %> </div>
            <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false&libraries=places&language=en-AU"></script>
        <script>
            var autocompleteA = new google.maps.places.Autocomplete($("#addressA")[0], {});

            google.maps.event.addListener(autocompleteA, 'place_changed', function() {
                var place = autocompleteA.getPlace();
                console.log(place.address_components);
            });

            var autocompleteB = new google.maps.places.Autocomplete($("#addressB")[0], {});

            google.maps.event.addListener(autocompleteB, 'place_changed', function() {
                var place = autocompleteB.getPlace();
                console.log(place.address_components);
            });
        </script>

    <div class="fields">
    <%= f.label :depart, "* Depart Date" %>
    <%= f.text_field :depart, :id => "myTextField3" %><br>

  </div>
      <%= f.input :depart_time%>
