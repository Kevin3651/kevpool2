<% if signed_in? %>

<% for request in requests %>

		<% if @ride.user_email == current_user.email %>
        Passenger's Email: <%= mail_to "#{request.user_email}" %><br>
        <% unless request.notes.nil? %>Passenger's Notes: <%= request.notes %><% end %><br>
        <% unless request.phone.nil? %>Passenger's Phone: <%= request.phone %><% end %><br>

<%= link_to 'Accept', ride_request_path(@ride, request), :class => "btn btn-success", :method => :put %>
<%= link_to 'Reject', ride_request_path(@ride, request), :class => "btn btn-danger", :confirm => 'Are you sure?', :method => :delete %>    
  <%= button_to 'See their profile', user_path(request.user_id), :method => :get %>
<% end %>  
<% end %>  
<% end %>
	


